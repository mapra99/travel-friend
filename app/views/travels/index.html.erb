<% provide :title, "Todos los Viajes" %>
<table class="text-center mx-auto my-2">
  <tr>
    <th class="px-3">Fecha</th>
    <th class="px-3">Hora</th>
    <th class="px-3"></th>
  <tr>

  <% @travels.each do |t| %>
    <tr>
      <td><%= t.created_at.in_time_zone('Bogota').strftime("%d/%m/%Y")%></td>
      <td><%= t.created_at.in_time_zone('Bogota').strftime("%H:%M")%></td>
      <td><%= link_to "Borrar Viaje", travel_path(id: t.id), method: :delete, class: "btn btn-danger " %></td>
    </tr>
  <% end %>
</table>
<%= link_to "Nuevo Viaje", new_travel_path, class: "btn btn-primary" %>
